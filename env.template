# TikTok Business API Configuration
# Copy this file to .env and fill in your actual values

# =================================================================
# REQUIRED: TikTok API Credentials
# =================================================================
TIKTOK_APP_ID=your_app_id_here
TIKTOK_SECRET=your_app_secret_here
TIKTOK_ACCESS_TOKEN=your_access_token_here

# Optional: Advertiser ID (can be obtained programmatically)
TIKTOK_ADVERTISER_ID=your_advertiser_id_here

# =================================================================
# API Configuration
# =================================================================

# Sandbox mode (set to true for testing with sandbox data)
TIKTOK_SANDBOX=false

# API Rate Limiting (requests per hour)
TIKTOK_API_RATE_LIMIT=1000

# Request timeout in seconds
TIKTOK_REQUEST_TIMEOUT=30

# =================================================================
# Performance & Caching
# =================================================================

# Enable response caching for better performance
TOKEN_CACHE_ENABLED=true

# Cache directory (relative to project root)
TOKEN_CACHE_DIR=.cache

# =================================================================
# Server Configuration
# =================================================================
HOST=localhost
PORT=8000
DEBUG=true

# =================================================================
# Authentication Notes
# =================================================================
#
# Your TikTok API credentials can be obtained from:
# https://business-api.tiktok.com/portal/
#
# Required scopes for this MCP server:
# - User Info Basic
# - Ad Management Read
# - Campaign Management Read  
# - Reporting Read
#
# This MCP server is READ-ONLY and will not modify your campaigns
# or ad data. All operations are safe for production use.
